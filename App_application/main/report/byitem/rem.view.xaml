<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
	<Page.Toolbar>
		<Toolbar>
			<DatePicker Label="Date" Value="{Bind Query.Date}"/>
			<Separator />
			<Button Icon="Print" Command="{BindCmd Command=Print}"/>
			<Button Icon="ExportExcel" Command="{BindCmd Command=ExportTo, Format=Excel, FileName='reminders'}"/>
			<ToolbarAligner />
			<Button Content="Close" Command="{BindCmd Close}"/>
		</Toolbar>
	</Page.Toolbar>
	<SheetPage Orientation="Portrait">
		<Sheet GridLines="Both">
			<Sheet.Columns>
				<SheetColumn Width="20rem"/>
				<SheetColumn Width="5rem" Background="Green"/>
			</Sheet.Columns>
			<SheetSection>
				<SheetRow Style="Title">
					<SheetCell ColSpan="2">Reminders by rems</SheetCell>
				</SheetRow>
				<SheetRow Style="Header">
					<SheetCell Content="Item"/>
					<SheetCell Content="Rem"/>
				</SheetRow>
			</SheetSection>
			<SheetSection ItemsSource="{Bind RepData}">
				<SheetRow>
					<SheetCell Content="{Bind Item.Name}"/>
					<SheetCell Content="{Bind Qty, DataType=Number}" Align="Right"/>
				</SheetRow>
			</SheetSection>
		</Sheet>
	</SheetPage>
</Page>