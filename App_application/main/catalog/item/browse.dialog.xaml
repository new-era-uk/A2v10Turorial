<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
		Title="Browse Item" Padding="1rem">
	<Dialog.Buttons>
		<Button Content="Select" Command="{BindCmd Select, Argument={Bind Items}}"/>
		<Button Content="Cancel" Command="{BindCmd Close}"/>
	</Dialog.Buttons>
	<DataGrid ItemsSource="{Bind Items}" Grid.VAlign="Stretch"
				  GridLines="Both" Striped="True" Hover="True"
				DoubleClick="{BindCmd Command=Select,
				Argument={Bind Items}}">
		<DataGridColumn Header="Id" Content="{Bind Id}" Role="Id"/>
		<DataGridColumn Header="Name" Content="{Bind Name}" />
		<DataGridColumn Header="Article" Content="{Bind Article}" Fit="True" Wrap="NoWrap"/>
		<DataGridColumn Header="Name" Content="{Bind Memo}" />
		<DataGridColumn Fit="True">
			<CommandBar Visibility="Hover">
				<Hyperlink Icon="Edit" 
						Command="{BindCmd Dialog, Action=Edit, Argument={Bind}, Url='/catalog/item/edit' }"/>
			</CommandBar>
		</DataGridColumn>
	</DataGrid>
</Dialog>